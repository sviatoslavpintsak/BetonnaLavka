<div id="<%= dom_id product %>">
<div class="card mb-3" id="<%= dom_id product %>">
  <% if product.pics.present? %>
    <%= image_tag product.pics, class: "card-img-top" %>
  <% end %>
  <div class="card-body">
    <h5 class="card-title"><%= product.product %></h5>
    <p class="card-text"><strong>Category:</strong> <%= product.categorie %></p>
    <p class="card-text"><strong>Price:</strong> <%= number_to_currency(product.price) %></p>
    <p class="card-text"><strong>Weight:</strong> <%= product.weight %></p>
    <%= form_tag(buy_product_path(product), method: :post) do %>
      <%= label_tag(:quantity, "Quantity:") %>
      <%= number_field_tag(:quantity, 1, min: 1, max: 100, class: "form-control mb-3") %>
      <%= submit_tag 'Buy it', class: 'btn btn-primary product_submit_button'  %>
    <% end %>
  </div>
</div>
</div>
